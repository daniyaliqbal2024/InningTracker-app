<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/button_add_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ball"
        app:layout_constraintEnd_toStartOf="@+id/button_add_strike"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_add_strike" />

    <Button
        android:id="@+id/button_add_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Strike"
        app:layout_constraintBottom_toTopOf="@+id/button_reset"
        app:layout_constraintEnd_toStartOf="@+id/button_add_out"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_add_ball" />

    <Button
        android:id="@+id/button_add_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_add_strike"
        app:layout_constraintTop_toTopOf="@+id/button_add_strike" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Reset Balls / Strikes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_num_balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textSize="70sp"
        app:layout_constraintEnd_toStartOf="@+id/text_num_strikes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_num_strikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="70sp"
        app:layout_constraintEnd_toStartOf="@+id/text_num_outs"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_num_balls"
        app:layout_constraintTop_toTopOf="@+id/text_num_balls" />

    <TextView
        android:id="@+id/text_num_outs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_num_strikes"
        app:layout_constraintTop_toTopOf="@+id/text_num_strikes" />

    <TextView
        android:id="@+id/label_balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balls"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/text_num_balls"
        app:layout_constraintStart_toStartOf="@+id/text_num_balls"
        app:layout_constraintTop_toBottomOf="@+id/text_num_balls" />

    <TextView
        android:id="@+id/label_strikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strikes"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/text_num_strikes"
        app:layout_constraintStart_toStartOf="@+id/text_num_strikes"
        app:layout_constraintTop_toTopOf="@+id/label_balls" />

    <TextView
        android:id="@+id/label_outs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outs"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/text_num_outs"
        app:layout_constraintStart_toStartOf="@+id/text_num_outs"
        app:layout_constraintTop_toTopOf="@+id/label_strikes" />

</androidx.constraintlayout.widget.ConstraintLayout>